---
import BaseLayout from '../layouts/BaseLayout.astro';
import { getCollection } from 'astro:content';

// Fetch all collections defensively
const [prompts, skills, agents, guides, enterprise] = await Promise.all([
  getCollection('prompts').catch(() => []),
  getCollection('skills').catch(() => []),
  getCollection('agents').catch(() => []),
  getCollection('guides').catch(() => []),
  getCollection('enterprise').catch(() => []),
]);

const counts = {
  prompts: prompts.length,
  skills: skills.length,
  agents: agents.length,
  guides: guides.length,
  enterprise: enterprise.length,
};

// Merge all content, sort by date desc, take latest 8
const allContent = [...prompts, ...skills, ...agents, ...guides, ...enterprise];
allContent.sort((a, b) => new Date(b.data.date).getTime() - new Date(a.data.date).getTime());
const latest = allContent.slice(0, 8);

// Category card data
const categories = [
  {
    name: 'Prompts',
    slug: 'prompts',
    icon: '&#9997;',
    count: counts.prompts,
    tagline: 'Ready-to-use AI prompts for every task',
  },
  {
    name: 'Skills',
    slug: 'skills',
    icon: '&#9889;',
    count: counts.skills,
    tagline: 'Technical skills and patterns for AI devs',
  },
  {
    name: 'Agents',
    slug: 'agents',
    icon: '&#129302;',
    count: counts.agents,
    tagline: 'Autonomous agent architectures and templates',
  },
  {
    name: 'Guides',
    slug: 'guides',
    icon: '&#128218;',
    count: counts.guides,
    tagline: 'Step-by-step tutorials for beginners',
  },
  {
    name: 'Enterprise',
    slug: 'enterprise',
    icon: '&#127970;',
    count: counts.enterprise,
    tagline: 'Curated skill packs for teams at scale',
  },
];

// Difficulty color mapping
function difficultyColor(d: string) {
  if (d === 'beginner') return 'var(--color-beginner)';
  if (d === 'intermediate') return 'var(--color-intermediate)';
  return 'var(--color-advanced)';
}

// Format date
function fmtDate(d: Date) {
  return new Date(d).toLocaleDateString('en-US', {
    month: 'short',
    day: 'numeric',
    year: 'numeric',
  });
}

const base = import.meta.env.BASE_URL;

// Get collection slug prefix for linking
function collectionSlug(entry: any) {
  return `${base}${entry.data.category}/${entry.slug}/`;
}
---

<BaseLayout title="Home">
  <!-- ========== HERO ========== -->
  <section class="hero">
    <div class="hero__inner container">
      <div class="hero__terminal">
        <span class="hero__terminal-prompt">$</span>
        <span class="hero__terminal-text">explore --ai-arsenal</span>
        <span class="hero__terminal-caret"></span>
      </div>
      <h1 class="hero__headline">
        Prompts. Skills. Agents.<br />
        <span class="hero__headline-accent">The AI Developer's Arsenal.</span>
      </h1>
      <p class="hero__sub">
        Open-source prompts, skills, agent templates, and guides for building with AI.
      </p>
      <div class="hero__search">
        <svg class="hero__search-icon" width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
          <circle cx="11" cy="11" r="8" />
          <line x1="21" y1="21" x2="16.65" y2="16.65" />
        </svg>
        <input
          type="search"
          class="hero__search-input"
          placeholder="Search prompts, skills, agents..."
          aria-label="Search content"
          disabled
        />
      </div>
    </div>
  </section>

  <!-- ========== CATEGORY CARDS ========== -->
  <section class="categories section">
    <div class="container">
      <h2 class="categories__title">Browse by Category</h2>
      <div class="categories__grid">
        {categories.map((cat) => (
          <a href={`${base}${cat.slug}/`} class="cat-card">
            <span class="cat-card__icon" set:html={cat.icon} />
            <span class="cat-card__count">{cat.count}</span>
            <h3 class="cat-card__name">{cat.name}</h3>
            <p class="cat-card__tagline">{cat.tagline}</p>
          </a>
        ))}
      </div>
    </div>
  </section>

  <!-- ========== AD PLACEHOLDER ========== -->
  <div class="ad-placeholder container">
    <div class="ad-placeholder__inner">
      <span class="ad-placeholder__label">Advertisement</span>
    </div>
  </div>

  <!-- ========== FEATURED / LATEST ========== -->
  <section class="featured section">
    <div class="container">
      <h2 class="featured__title">Latest Content</h2>
      {latest.length > 0 ? (
        <div class="featured__grid">
          {latest.map((item) => (
            <a href={collectionSlug(item)} class="content-card">
              <div class="content-card__header">
                <span class="content-card__category">{item.data.category}</span>
                <span
                  class="content-card__difficulty"
                  style={`--badge-color: ${difficultyColor(item.data.difficulty)}`}
                >
                  {item.data.difficulty}
                </span>
              </div>
              <h3 class="content-card__title">{item.data.title}</h3>
              <p class="content-card__desc">{item.data.description}</p>
              <time class="content-card__date" datetime={new Date(item.data.date).toISOString()}>
                {fmtDate(item.data.date)}
              </time>
            </a>
          ))}
        </div>
      ) : (
        <div class="featured__empty">
          <p>No content yet. Check back soon â€” new prompts, skills, and guides are added daily.</p>
        </div>
      )}
    </div>
  </section>

  <!-- ========== STATS BAR ========== -->
  <section class="stats">
    <div class="stats__inner container">
      <span class="stats__item">
        <strong class="stats__number">{counts.prompts}</strong> Prompts
      </span>
      <span class="stats__divider">|</span>
      <span class="stats__item">
        <strong class="stats__number">{counts.skills}</strong> Skills
      </span>
      <span class="stats__divider">|</span>
      <span class="stats__item">
        <strong class="stats__number">{counts.agents}</strong> Agents
      </span>
      <span class="stats__divider">|</span>
      <span class="stats__item stats__item--growing">Growing Daily</span>
    </div>
  </section>

  <!-- ========== FOOTER ========== -->
  <footer class="footer">
    <div class="footer__inner container">
      <div class="footer__brand">
        <span class="footer__logo">Prompts &amp; Skills</span>
        <p class="footer__tagline">Built for the AI revolution.</p>
      </div>
      <nav class="footer__nav" aria-label="Footer navigation">
        <a href={`${base}about/`}>About</a>
        <a href={`${base}prompts/`}>Prompts</a>
        <a href={`${base}skills/`}>Skills</a>
        <a href={`${base}agents/`}>Agents</a>
        <a href={`${base}guides/`}>Guides</a>
        <a href={`${base}enterprise/`}>Enterprise</a>
        <a href={`${base}privacy/`}>Privacy Policy</a>
      </nav>
      <p class="footer__copy">&copy; 2026 Prompts &amp; Skills. All rights reserved.</p>
    </div>
  </footer>
</BaseLayout>

<style>
  /* ========== HERO ========== */
  .hero {
    background: linear-gradient(
      180deg,
      var(--color-bg) 0%,
      var(--color-surface) 100%
    );
    padding-block: var(--space-24) var(--space-16);
    text-align: center;
  }

  .hero__inner {
    display: flex;
    flex-direction: column;
    align-items: center;
    gap: var(--space-6);
  }

  /* Terminal typing animation */
  .hero__terminal {
    display: inline-flex;
    align-items: center;
    gap: var(--space-2);
    background: var(--color-code-bg);
    border: 1px solid var(--color-border);
    border-radius: var(--radius-md);
    padding: var(--space-3) var(--space-6);
    font-family: var(--font-mono);
    font-size: var(--text-sm);
    color: var(--color-primary);
  }

  .hero__terminal-prompt {
    color: var(--color-text-secondary);
    user-select: none;
  }

  .hero__terminal-text {
    overflow: hidden;
    white-space: nowrap;
    border-right: none;
    width: 0;
    animation: typing 2s steps(22) 0.5s forwards;
  }

  .hero__terminal-caret {
    display: inline-block;
    width: 2px;
    height: 1.2em;
    background: var(--color-primary);
    animation: blink 1s step-end infinite;
  }

  @keyframes typing {
    from { width: 0; }
    to { width: 22ch; }
  }

  @keyframes blink {
    0%, 100% { opacity: 1; }
    50% { opacity: 0; }
  }

  .hero__headline {
    font-size: clamp(var(--text-3xl), 5vw, var(--text-5xl));
    line-height: 1.15;
    max-width: 800px;
  }

  .hero__headline-accent {
    color: var(--color-primary);
  }

  .hero__sub {
    font-size: var(--text-lg);
    color: var(--color-text-secondary);
    max-width: 520px;
  }

  /* Search bar */
  .hero__search {
    position: relative;
    width: 100%;
    max-width: 480px;
    margin-top: var(--space-4);
  }

  .hero__search-icon {
    position: absolute;
    left: var(--space-4);
    top: 50%;
    translate: 0 -50%;
    color: var(--color-text-secondary);
    pointer-events: none;
  }

  .hero__search-input {
    width: 100%;
    padding: var(--space-3) var(--space-4) var(--space-3) calc(var(--space-4) + 28px);
    background: var(--color-surface);
    border: 1px solid var(--color-border);
    border-radius: var(--radius-full);
    color: var(--color-text);
    font-size: var(--text-base);
    outline: none;
    transition: border-color var(--transition-fast), box-shadow var(--transition-fast);

    &::placeholder {
      color: var(--color-text-secondary);
    }

    &:focus {
      border-color: var(--color-primary);
      box-shadow: 0 0 0 3px color-mix(in srgb, var(--color-primary) 15%, transparent);
    }
  }

  /* ========== CATEGORY CARDS ========== */
  .categories__title {
    text-align: center;
    margin-bottom: var(--space-8);
    font-size: var(--text-3xl);
  }

  .categories__grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(200px, 1fr));
    gap: var(--space-6);
  }

  .cat-card {
    display: flex;
    flex-direction: column;
    align-items: center;
    text-align: center;
    gap: var(--space-2);
    background: var(--color-surface);
    border: 1px solid var(--color-border);
    border-radius: var(--radius-md);
    padding: var(--space-8) var(--space-4);
    transition:
      box-shadow var(--transition-base),
      transform var(--transition-base);
    container-type: inline-size;
  }

  .cat-card:hover {
    box-shadow: var(--shadow-glow);
    transform: scale(1.02);
  }

  .cat-card__icon {
    font-size: 2.5rem;
    line-height: 1;
  }

  .cat-card__count {
    font-family: var(--font-heading);
    font-size: var(--text-4xl);
    font-weight: 700;
    color: var(--color-primary);
    line-height: 1;
  }

  .cat-card__name {
    font-size: var(--text-xl);
    font-weight: 600;
  }

  .cat-card__tagline {
    font-size: var(--text-sm);
    color: var(--color-text-secondary);
  }

  /* ========== AD PLACEHOLDER ========== */
  .ad-placeholder {
    padding-block: var(--space-4);
  }

  .ad-placeholder__inner {
    background: var(--color-surface);
    border: 1px dashed var(--color-border);
    border-radius: var(--radius-md);
    padding: var(--space-8) var(--space-4);
    text-align: center;
    min-height: 90px;
    display: flex;
    align-items: center;
    justify-content: center;
  }

  .ad-placeholder__label {
    font-size: var(--text-xs);
    color: var(--color-text-secondary);
    text-transform: uppercase;
    letter-spacing: 0.1em;
  }

  /* ========== FEATURED / LATEST ========== */
  .featured__title {
    text-align: center;
    margin-bottom: var(--space-8);
    font-size: var(--text-3xl);
  }

  .featured__grid {
    display: grid;
    grid-template-columns: repeat(auto-fill, minmax(280px, 1fr));
    gap: var(--space-6);
  }

  .featured__empty {
    text-align: center;
    padding: var(--space-12);
    background: var(--color-surface);
    border: 1px solid var(--color-border);
    border-radius: var(--radius-md);

    & p {
      font-size: var(--text-lg);
      color: var(--color-text-secondary);
      max-width: 50ch;
      margin-inline: auto;
    }
  }

  .content-card {
    display: flex;
    flex-direction: column;
    gap: var(--space-3);
    background: var(--color-surface);
    border: 1px solid var(--color-border);
    border-radius: var(--radius-md);
    padding: var(--space-6);
    transition:
      box-shadow var(--transition-base),
      transform var(--transition-base);
    animation: card-enter linear both;
    animation-timeline: view();
    animation-range: entry 0% entry 30%;
  }

  .content-card:hover {
    box-shadow: var(--shadow-glow);
    transform: scale(1.02);
  }

  @keyframes card-enter {
    from {
      opacity: 0;
      translate: 0 20px;
    }
    to {
      opacity: 1;
      translate: 0 0;
    }
  }

  .content-card__header {
    display: flex;
    align-items: center;
    gap: var(--space-2);
  }

  .content-card__category {
    font-size: var(--text-xs);
    font-weight: 600;
    text-transform: uppercase;
    letter-spacing: 0.05em;
    background: color-mix(in srgb, var(--color-secondary) 20%, transparent);
    color: var(--color-secondary);
    padding: var(--space-1) var(--space-2);
    border-radius: var(--radius-sm);
  }

  .content-card__difficulty {
    font-size: var(--text-xs);
    font-weight: 600;
    text-transform: capitalize;
    color: var(--badge-color);
    border: 1px solid var(--badge-color);
    padding: var(--space-1) var(--space-2);
    border-radius: var(--radius-sm);
  }

  .content-card__title {
    font-size: var(--text-lg);
    font-weight: 600;
    line-height: 1.3;
  }

  .content-card__desc {
    font-size: var(--text-sm);
    color: var(--color-text-secondary);
    display: -webkit-box;
    -webkit-line-clamp: 3;
    -webkit-box-orient: vertical;
    overflow: hidden;
  }

  .content-card__date {
    font-size: var(--text-xs);
    color: var(--color-text-secondary);
    margin-top: auto;
  }

  /* ========== STATS BAR ========== */
  .stats {
    background: var(--color-surface);
    border-block: 1px solid var(--color-border);
    padding-block: var(--space-8);
  }

  .stats__inner {
    display: flex;
    align-items: center;
    justify-content: center;
    flex-wrap: wrap;
    gap: var(--space-4);
    font-family: var(--font-heading);
    font-size: var(--text-lg);
  }

  .stats__number {
    color: var(--color-primary);
    font-size: var(--text-2xl);
    font-weight: 700;
  }

  .stats__divider {
    color: var(--color-border);
    user-select: none;
  }

  .stats__item--growing {
    color: var(--color-primary);
    font-weight: 600;
  }

  /* ========== FOOTER ========== */
  .footer {
    padding-block: var(--space-12);
    border-top: 1px solid var(--color-border);
  }

  .footer__inner {
    display: flex;
    flex-direction: column;
    align-items: center;
    gap: var(--space-6);
    text-align: center;
  }

  .footer__logo {
    font-family: var(--font-heading);
    font-size: var(--text-xl);
    font-weight: 700;
    color: var(--color-text);
  }

  .footer__tagline {
    font-size: var(--text-sm);
    color: var(--color-text-secondary);
  }

  .footer__nav {
    display: flex;
    flex-wrap: wrap;
    gap: var(--space-4);
    justify-content: center;

    & a {
      font-size: var(--text-sm);
      color: var(--color-text-secondary);
      transition: color var(--transition-fast);

      &:hover {
        color: var(--color-primary);
      }
    }
  }

  .footer__copy {
    font-size: var(--text-xs);
    color: var(--color-text-secondary);
  }

  /* ========== RESPONSIVE ========== */
  @media (max-width: 640px) {
    .hero {
      padding-block: var(--space-16) var(--space-12);
    }

    .hero__headline {
      font-size: var(--text-3xl);
    }

    .categories__grid {
      grid-template-columns: repeat(2, 1fr);
    }

    .categories__grid > :last-child {
      grid-column: 1 / -1;
    }

    .stats__inner {
      gap: var(--space-3);
      font-size: var(--text-base);
    }

    .stats__number {
      font-size: var(--text-xl);
    }
  }
</style>
